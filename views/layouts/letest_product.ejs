<section class="top-letest-product-section">
    <div class="container">
        <div class="section-title">
            <h2>LATEST PRODUCTS</h2>
        </div>
        <div class="product-slider owl-carousel">
            <% data_letest.forEach(item => {  %>
            <div class="product-item">
                <div class="pi-pic">
                    <img src="../img/product/<%- item.hinh[0] %>" alt="">
                    <div class="pi-links">
                        <a href="/product-detail/<%- item._id %>" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                        <a href="/product-detail/<%- item._id %>" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                    </div>
                </div>
                <div class="pi-text">
                    <h6>$ <%- item.dongia %></h6>
                    <p><%- item.tensanpham %> </p>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>